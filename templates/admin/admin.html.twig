{% extends 'window.html.twig' %}

{% if current %}
    {% set pageTitle = current.name ~ ' | Mocker' %}
{% else %}
    {% set pageTitle = 'Mocker' %}
{% endif %}
    {% block title %}{{ pageTitle }}{% endblock %}

{% if app.request.port == 80 %}
    {% set host = 'http://' ~ app.request.host %}
{% elseif app.request.port == 443 %}
    {% set host = 'https://' ~ app.request.host %}
{% else %}
    {% set host = 'http://' ~ app.request.host ~ ':' ~ app.request.port %}
{% endif %}


{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block window %}
    {% trans_default_domain 'application' %}
    {% include 'admin/component/_sidebar.html.twig' %}
    {% include 'admin/component/_details.html.twig' %}
    <a class="window__settings" href="{{ url('app_settings') }}">
        <span class="fas fa-cog"></span>
        {% trans %}application.window.screenSwitch.launchSettings{% endtrans %}
    </a>
{% endblock %}

{% block dialogBox %}
    <div class="dialog dialog--hidden" aria-hidden="true">
        <div class="dialog__background"></div>
        <div class="dialog__foreground">
            <main class="dialog__window">
                <h2 class="dialog__title">
                    <span class="fas fa-exclamation fa-fw dialog__icon"></span>
                    <span class="dialog__title-content"></span>
                </h2>
                <p class="dialog__content">
                </p>
                <div class="dialog__buttons">
                    <button class="dialog__return">
                        <span class="fas fa-chevron-left fa-fw"></span>
                        Wróć
                    </button>
                    <a class="dialog__proceed" href="">
                        <span class="fas fa-trash fa-fw"></span>
                        Usuń
                    </a>
                </div>
            </main>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}